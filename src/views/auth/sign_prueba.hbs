<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">

        <div class="card-header">
          <h3>SignUp de prueba nomas</h3>
        </div>

        <div class="card-body">
          <form action="/signup_prueba" method="POST">

            <div class="form-group">
              <input type="type" name="nombre" placeholder="Nombre" class="form-control" >
            </div>
            <div class="form-group">
              <input type="type" name="apellido" placeholder="Apellido" class="form-control" >
            </div>
            <div class="form-group">
              <input type="type" name="edad" placeholder="Edad" class="form-control" >
            </div>
            <div class="form-group">
              <input type="type" name="dni" placeholder="DNI" class="form-control" >
            </div>

             <!-- inputbox:username, password -->

            <div class="form-group">
              <input type="text" name="username" placeholder="Username" class="form-control">
            </div>

            <div class="form-group">
              <input type="password" name="password" placeholder="Password" class="form-control">
            </div>

            <div class="form-group">
              <button class="btn btn-success btn-block">Sing In</button>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
</div>
