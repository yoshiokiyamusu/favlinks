
<div class="container p-4">
    <div class="row">
        {{#each links}}
          <div class="col-md-3">
              <div class="card text-center">
                  <div class="card-body">
                      <a href="{{url}}" target="_blank">
                          <h3 class="card-title text-uppercase">
                              {{title}}
                          </h3>
                        </a>

                        <p class="m-2">{{description}}</p>
                        <p class="text-muted"> {{timeago created_at}} </p>
                        <a class="btn btn-danger" href="/links/delete/{{id}}">Delete Link </a>
                        <a class="btn btn-secondary" href="/links/edit/{{id}}"> Edit </a>
                  </div>
              </div>
          </div>

          {{else}} <!-- Else: si no hay data en la tabla links del SQL BD -->
          <div class="col-md-4 mx-auto">
              <div class="card card-body text-center">
                  <p>No existen links aun</p>
                  <a href="/links/add">Crea uno!</a>
              </div>
          </div>



        {{/each}}
    </div>
</div>
